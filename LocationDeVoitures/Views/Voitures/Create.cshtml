@model LocationDeVoitures.Models.Voiture
@{
    ViewBag.Title = "Create";
}

<h2>Index</h2>


@using (Html.BeginForm("Create", "Voitures", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
